<%
let namespaces = [];
_.values(page.namespaces).map(function(doc){
    namespaces.push({
        name: doc.name,
        url: url_for_api_entity(doc.refid)
    })
});
let moduleModels = [];
_.values(page.modules).map(function(module){
    if(!module.parent) {
        moduleModels.push(module);
    }
});
let moduleList = generate_flat_module_list(moduleModels, 0, "");
%>
<div id="container" style="width:100%;">
    <div class="uk-container uk-margin-small-top uk-margin-small-bottom cppapidoc-page-container cppapidoc-index-page">
        <div class="cppapidoc-container uk-flex uk-flex-left">
            <div class="side-panel-container uk-visible@m">
                <%- partial("_partial/cppapi/sidepanel") %>
            </div>
            <div class="uk-width-expand cppapidoc-info-container cppapidoc-index-info-container">
                <div class="module-entry">
                    <div class="title">
                        <img src="/statics/images/apidocs/cpp/module.svg"/><h3 class="uk-width-expand"><%= __("cppapidoc.index.module_list")%></h3>
                    </div>
                    <ul>
                        <% for (let i in moduleList) {
                            let module = moduleList[i];
                        %>
                        <li><a href="<%- module.url %>"><%- module.name %></a></li>
                        <% } %>
                    </ul>
                </div>
                <div class="namespace-entry uk-margin-medium-top">
                    <div class="title">
                        <img src="/statics/images/apidocs/cpp/namespace.svg"/><h3><%= __("cppapidoc.index.namespace_list")%></h3>
                    </div>
                    <ul>
                        <% for (let i in namespaces) {
                            let namespace = namespaces[i];
                        %>
                        <li><a href="<%- namespace.url %>"><%- namespace.name %></a></li>
                        <% } %>
                    </ul>
                </div>

                <hr class="uk-divider-icon"/>
                <div class="doxygen-info">generated by Doxygen: <%- get_doxygen_version() %></div>
            </div>
        </div>
    </div>
</div>