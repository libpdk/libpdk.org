<%
let namespaces = [];
_.values(page.namespaces).map(function(doc){
    namespaces.push({
        name: doc.name,
        url: url_for_api_entity(doc.refid)
    })
});
%>
<div id="container" style="width: 100%;">
    <div class="uk-container uk-margin-small-top uk-margin-small-bottom cppapidoc-page-container cppapidoc-namespaces-page">
        <div class="manual-container uk-flex uk-flex-left">
            <div class="side-panel-container uk-visible@m">
                <%- partial("_partial/cppapi/sidepanel") %>
            </div>
            <div class="uk-width-expand cppapidoc-info-container cppapidoc-namespaces-info-container">
                <h3 class="uk-width-1-1 title"><%= __("cppapidoc.namespaces.namespace_list") %></h3>
                <% for (let i in namespaces) {
                    let item = namespaces[i];
                %>
                <div class="uk-grid-small list-item" uk-grid>
                    <div class="uk-width-1-1 uk-width-1-3@s">
                        <a class="uk-text-break" href = "<%- item.url %>"><%- item.name %></a>
                    </div>
                    <div class="uk-width-1-1 uk-width-2-3@s">
                        <span><%- item.description %></span>
                    </div>
                </div>
                <% } %>
                <div class="doxygen-info">generated by Doxygen: <%- get_doxygen_version() %></div>
            </div>
        </div>
    </div>
</div>